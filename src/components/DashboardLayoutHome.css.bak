/* src/components/DashboardLayoutHome.css */
.dashboard-layout-home {
  width: 100%;
  height: 100vh;
  position: relative;
  overflow: hidden;
  font-family: system-ui, -apple-system, sans-serif;
  padding: 2rem;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  background: #0F172A;
}

.dashboard-bg {
  position: absolute;
  inset: 0;
  background: linear-gradient(135deg, #0F172A 0%, #1E293B 100%);
  z-index: -1;
  opacity: 0.98;
}

/* 3×4 GRID — LOCKED HEIGHT, MERGE-READY */
.dashboard-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  grid-template-rows: repeat(3, 280px); /* ← Exact row height */
  gap: 1.5rem;
  width: 100%;
  max-height: 920px; /* 3×280 + 2×gap + padding */
  margin-bottom: 100px;
  position: relative;
  overflow: visible;
  pointer-events: none; /* Allow drop on slots only */
}

.dashboard-grid > * {
  pointer-events: auto;
}

/* FAB — 72px MONSTER BUTTON */
.fab-container {
  position: absolute;
  bottom: 2rem;
  right: 2rem;
  z-index: 1000;
}

.fab-button {
  width: 72px;
  height: 72px;
  background: #007AFF;
  border-radius: 50%;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  box-shadow: 0 12px 32px rgba(0, 122, 255, 0.4);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  backdrop-filter: blur(12px);
}

.fab-button:hover {
  transform: scale(1.15);
  box-shadow: 0 16px 40px rgba(0, 122, 255, 0.5);
}

.fab-icon {
  transition: transform 0.4s ease;
}

.fab-icon.rotate {
  transform: rotate(45deg);
}

/* SCROLLABLE PALETTE — NATIVE + SMOOTH */
.widget-palette {
  position: absolute;
  bottom: 90px;
  right: 0;
  background: rgba(26, 26, 26, 0.95);
  backdrop-filter: blur(20px);
  color: #e2e8f0;
  border-radius: 20px;
  padding: 1.5rem;
  box-shadow: 0 20px 50px rgba(0, 0, 0, 0.6);
  border: 1px solid rgba(59, 130, 246, 0.3);
  min-width: 320px;
  max-height: 70vh;
  animation: slideUp 0.4s ease-out;
  pointer-events: auto;
  display: flex;
  flex-direction: column;
}

.palette-title {
  font-size: 14px;
  font-weight: 700;
  color: #60A5FA;
  text-align: center;
  margin-bottom: 1rem;
  text-transform: uppercase;
  letter-spacing: 1px;
}

.palette-scroll {
  overflow-y: auto;
  padding-right: 8px;
  margin-right: -8px;
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 0.75rem;
}

.palette-scroll::-webkit-scrollbar {
  width: 6px;
}

.palette-scroll::-webkit-scrollbar-track {
  background: transparent;
}

.palette-scroll::-webkit-scrollbar-thumb {
  background: #3B82F6;
  border-radius: 3px;
}

.palette-scroll::-webkit-scrollbar-thumb:hover {
  background: #2563EB;
}

/* WIREFRAME ONLY ON HOVER (Issue #3) */
.widget-slot {
  border: 2px dashed transparent;
  border-radius: 16px;
  transition: all 0.3s ease;
  position: relative;
}

.widget-slot:hover:not(.occupied) {
  border-color: rgba(59, 130, 246, 0.5) !important;
  background: rgba(59, 130, 246, 0.08) !important;
}

.widget-slot.active {
  border-color: #3B82F6 !important;
  background: rgba(59, 130, 246, 0.15) !important;
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}